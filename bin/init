#!/bin/bash

# 0. ###################
# Config
########################

SITE_HOME=http://localhost:8080
DEVELOPMENT_ROOT=./.development
SITE_DIR=site
DATA_DIR=data
SITE_PATH=$DEVELOPMENT_ROOT/$SITE_DIR
DATA_PATH=$DEVELOPMENT_ROOT/$DATA_DIR
RED='\033[0;31m'
GREEN='\033[0;32m'
BLUE='\033[0;34m'
NC='\033[0m'

# 1. ###########################
# Create development environemnt
################################

echo -e "${BLUE}Creating development environment directories in ${DEVELOPMENT_ROOT}${NC}"

mkdir $DEVELOPMENT_ROOT
mkdir $SITE_PATH
mkdir $DATA_PATH

# 2. ###################
# Clone Bedrock
########################

echo -e "${BLUE}Cloning Bedrock repository${NC}"

git clone --depth=1 --branch=master https://github.com/roots/bedrock.git $SITE_PATH

# 3. ###################
# Create .env file
########################

echo -e "${BLUE}Generating site config (.env)${NC}"

cp $SITE_PATH/.env.example $SITE_PATH/.env
WP_HOME="$(echo $SITE_HOME | sed 's|/|\\/|g')"
# Set DB_HOST
sed -i "" "s/# DB_HOST=localhost/DB_HOST=mysql/" $SITE_PATH/.env
# Set WP_HOME
sed -i "" "s/WP_HOME=http:\/\/example.com/WP_HOME=${WP_HOME}/" $SITE_PATH/.env

# 4. ###################
# Install Bedrock dependencies
########################

echo -e "${BLUE}Installing dependencies${NC}"

(cd $SITE_PATH && composer install)

########################
# Done!
########################

echo -e "${GREEN}Done!${NC}"